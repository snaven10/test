@model test.Models.Actividad
@using test.Common;

@{
    ViewData["Title"] = "Create";
    string Date = DateTime.Now.ToString("dd-MM-yyyy");
}

<h1>Create</h1>

<h4>Actividad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Duracion_llamada" class="control-label"></label>
                <input asp-for="Duracion_llamada" class="form-control" />
                <span asp-validation-for="Duracion_llamada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <input asp-for="Fecha" class="form-control" type="hidden" value="@Date"/>
            <input asp-for="Id_user" class="form-control" type="hidden" value="@User.getUserId()" />
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select class="form-control" asp-for="Tipo">
                    <option value="">Seleccione</option>
                    <option value="Duda">Duda</option>
                    <option value="Consulta">Consulta</option>
                    <option value="Reclamo">Reclamo</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resolvio" class="control-label"></label>
                <select class="form-control" asp-for="Resolvio">
                    <option value="">Seleccione</option>
                    <option value="Resolvio">Resolvio</option>
                    <option value="No Resolvio">Pendiente de respuesta</option>
                </select>
                <span asp-validation-for="Resolvio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
